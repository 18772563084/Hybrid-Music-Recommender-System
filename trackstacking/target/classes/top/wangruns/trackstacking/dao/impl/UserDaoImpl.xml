<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.wangruns.trackstacking.dao.UserDao">

	<select id="findLogin" parameterType="top.wangruns.trackstacking.model.User"
		resultType="top.wangruns.trackstacking.model.User">
		select * from user where email=#{email} and
		password=#{password}
	</select>
	
	<select id="isEmailExisted" parameterType="String"
		resultType="String">
		select email from user where email=#{email}
	</select>

</mapper>